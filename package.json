{
  "name": "ryan",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "play": "pnpm -F demo dev",
    "prettier": "prettier --write .",
    "prepare": "husky install",
    "lint": "eslint --ext .ts packages/*/**.ts",
    "lint:fix": "eslint --ext .ts packages/*/**.ts --fix",
    "commit": "git add . && git-cz"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@commitlint/cz-commitlint": "^17.5.0",
    "@ryan/components": "workspace:*",
    "@ryan/eslint-config": "workspace:*",
    "commitizen": "^4.3.0",
    "eslint": "^8.43.0",
    "husky": "^8.0.3",
    "less": "^4.1.3",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "typescript": "^4.7.4",
    "unplugin-vue-define-options": "^1.3.8",
    "vite": "^4.3.9",
    "vue": "^3.2.47"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "eslint --ext .ts packages/*/**.ts",
      "eslint --ext .ts packages/*/**.ts --fix"
    ],
    "*.{html,css,less,scss,md}": [
      "prettier --write ."
    ]
  }
}
